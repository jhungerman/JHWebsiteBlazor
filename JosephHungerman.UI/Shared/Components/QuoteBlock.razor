<section class="d-flex align-items-center justify-content-center bg-black text-white w-100 px-3 introQuote">
    @if (_isLoading)
    {
        <LoadingPlaceholder />
    }
    else
    {
        <q cite="@Quote?.CitationUrl">@Quote?.Text</q>
        <cite>&#8211 @Quote?.Author</cite>
    }
</section>
